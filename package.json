{
  "name": "floer-soloer",
  "version": "1.0.0",
  "description": "Template for FloerSoloer, by FloerSoloer",
  "license": "ISC",
  "author": "FloerSoloer",
  "repository": "https://github.com/FloerSoloer/FloerSoloer",
  "private": true,
  "main": "dist/bundle.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "prettier --write --loglevel silent . && eslint --fix .",
    "prepare": "husky install",
    "serve": "yarn run build && yarn start",
    "start": "cross-env NODE_PATH=dist node dist/index.js",
    "start:dev": "ts-node -P src/tsconfig.json -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "build": "tsc -p src",
    "commit": "cz",
    "dev": "nodemon"
  },
  "dependencies": {
    "dotenv-safe": "^8.2.0"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "node": "^16.13.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "yarn": "^1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "public"
    ],
    "ext": "ts,js,html,css",
    "exec": "yarn start:dev"
  }
}
